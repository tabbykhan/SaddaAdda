<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/sr_no"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/prevbalance"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/amount"
            />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/nxt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/top_bar"
        >

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="#a3ffaf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#a3ffaf" />

            <RelativeLayout
                android:id="@+id/expend_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/expend_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/expend" />

                <TextView
                    android:id="@+id/sno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/amazon_regular"
                    android:gravity="center"
                    android:shadowColor="#cd9b0e"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5"
                    android:text="1"
                    android:textColor="#cd9b0e"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#a3ffaf" />

            <TextView
                android:id="@+id/pBal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/amazon_regular"
                android:gravity="center"
                android:shadowColor="#c774ac"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="5"
                android:text="Date"
                android:textColor="#c774ac"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#a3ffaf" />

            <TextView
                android:id="@+id/amt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/amazon_regular"
                android:gravity="center"
                android:shadowColor="#d64447"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="5"
                android:text="Amount"
                android:textColor="#d64447"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#a3ffaf" />


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#a3ffaf" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dropdown_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nxt"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#a3ffaf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/amazon_regular"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:shadowColor="#a3ffaf"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5"
                    android:text="Trans Type"
                    android:textColor="#a3ffaf"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tranType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:fontFamily="@font/amazon_regular"
                    android:gravity="start|center_vertical"
                    android:shadowColor="#cd9b0e"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5"
                    android:text="7 up dwon"
                    android:textColor="#cd9b0e"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#a3ffaf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#a3ffaf" />
                <!--<View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="#a3ffaf" />-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/amazon_regular"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:shadowColor="#a3ffaf"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5"
                    android:text="Balance"
                    android:textColor="#a3ffaf"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cBal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:fontFamily="@font/amazon_regular"
                    android:gravity="start|center_vertical"
                    android:shadowColor="#cd9b0e"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5"
                    android:text="500000"
                    android:textColor="#cd9b0e"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#a3ffaf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#a3ffaf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/amazon_regular"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:shadowColor="#a3ffaf"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5"
                    android:text="Date"
                    android:textColor="#a3ffaf"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tranDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:fontFamily="@font/amazon_regular"
                    android:gravity="start|center_vertical"
                    android:shadowColor="#cd9b0e"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5"
                    android:text="15-Jun-2012"
                    android:textColor="#cd9b0e"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#a3ffaf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#a3ffaf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/amazon_regular"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:shadowColor="#a3ffaf"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5"
                    android:text="Remark"
                    android:textColor="#a3ffaf"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/remark"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:fontFamily="@font/amazon_regular"
                    android:gravity="start|center_vertical"
                    android:shadowColor="#cd9b0e"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5"
                    android:text="7 up dwon"
                    android:textColor="#cd9b0e"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#a3ffaf" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a3ffaf" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>