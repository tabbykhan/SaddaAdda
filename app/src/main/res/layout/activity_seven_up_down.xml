                        />

                    <TextView
                        android:id="@+id/eight_2x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/coinImg"
                        android:fontFamily="@font/amazon_bold"
                        android:gravity="center"
                        android:shadowColor="#a3ffaf"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="5"
                        android:text="20"
                        android:textColor="#a3ffaf"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <RelativeLayout
                        android:id="@+id/betBox"
                        android:layout_width="100dp"
                        android:layout_height="43dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/bet_img_new"
                        >


                        <EditText
                            android:id="@+id/bitText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:digits="1234567890"
                            android:fontFamily="@font/amazon_bold"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="4"
                            android:text="10"
                            android:textColor="#ffa4c6"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/betBox"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/amazon_regular"
                        android:gravity="center"
                        android:shadowColor="#a3ffaf"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="5"
                        android:text="2X"
                        android:textColor="#a3ffaf"
                        android:textSize="25sp"
                        android:textStyle="normal"
                        />

                    <TextView
                        android:id="@+id/bettxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/betBox"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/amazon_bold"
                        android:gravity="center"
                        android:shadowColor="#fcf677"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="5"
                        android:text="@string/bet"
                        android:textColor="#fcf677"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        />

                    <RelativeLayout
                        android:id="@+id/add_rl"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/betBox"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/add"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/remove_rl"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/betBox"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/remove"
                            />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignStart="@+id/betBox"
                        android:layout_alignLeft="@+id/betBox"
                        android:layout_alignTop="@+id/bettxt"
                        android:layout_alignBottom="@+id/bettxt"
                        android:layout_marginStart="-80dp"
                        android:layout_marginLeft="-80dp"
                        android:layout_toStartOf="@+id/bettxt"
                        android:layout_toLeftOf="@+id/bettxt"
                        android:src="@drawable/star"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/bettxt"
                        android:layout_alignEnd="@+id/betBox"
                        android:layout_alignRight="@+id/betBox"
                        android:layout_alignBottom="@+id/bettxt"
                        android:layout_marginEnd="-55dp"
                        android:layout_marginRight="-55dp"
                        android:layout_toStartOf="@+id/bettxt"
                        android:layout_toLeftOf="@+id/bettxt"
                        android:src="@drawable/star"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignStart="@+id/remove_rl"
                        android:layout_alignLeft="@+id/remove_rl"
                        android:layout_alignTop="@+id/remove_rl"
                        android:layout_alignBottom="@+id/remove_rl"
                        android:layout_marginStart="-60dp"
                        android:layout_marginLeft="-60dp"
                        android:layout_toStartOf="@+id/remove_rl"
                        android:layout_toLeftOf="@+id/remove_rl"
                        android:src="@drawable/star"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/bettxt"
                        android:layout_alignEnd="@+id/betBox"
                        android:layout_alignRight="@+id/betBox"
                        android:layout_alignBottom="@+id/bettxt"
                        android:layout_marginEnd="-55dp"
                        android:layout_marginRight="-55dp"
                        android:layout_toStartOf="@+id/bettxt"
                        android:layout_toLeftOf="@+id/bettxt"
                        android:src="@drawable/star"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/add_rl"
                        android:layout_alignEnd="@+id/add_rl"
                        android:layout_alignRight="@+id/add_rl"
                        android:layout_alignBottom="@+id/add_rl"
                        android:layout_marginEnd="-55dp"
                        android:layout_marginRight="-55dp"
                        android:layout_toStartOf="@+id/add_rl"
                        android:layout_toLeftOf="@+id/add_rl"
                        android:src="@drawable/star"
                        />

                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:id="@+id/rolldice"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/roll_dice"
                        />


                    <ImageView
                        android:id="@+id/dais_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/firstlevelanimation"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/dais_img1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_toRightOf="@id/dais_img"
                        android:src="@drawable/firstlevelanimation1"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/roll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dais_img"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="-1dp"
                        android:fontFamily="@font/amazon_regular"
                        android:gravity="center"
                        android:shadowColor="#fcf677"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="5"
                        android:text="@string/roll_dice"
                        android:textColor="#800000"
                        android:textSize="25sp"
                        android:textStyle="normal"
                        android:visibility="gone"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/dais_img"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    >

                    <TextView
                        android:id="@+id/tol1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_box"
                        android:fontFamily="@font/amazon_bold"
                        android:gravity="center"
                        android:textColor="#f4a12e"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tol2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_box"
                        android:fontFamily="@font/amazon_bold"
                        android:gravity="center"
                        android:textColor="#f4a12e"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tol3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_box"
                        android:fontFamily="@font/amazon_bold"
                        android:gravity="center"
                        android:textColor="#f4a12e"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tol4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_box"
                        android:fontFamily="@font/amazon_bold"
                        android:gravity="center"
                        android:textColor="#f4a12e"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tol5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_box"
                        android:fontFamily="@font/amazon_bold"
                        android:gravity="center"
                        android:textColor="#f4a12e"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tol6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_box"
                        android:fontFamily="@font/amazon_bold"
                        android:gravity="center"
                        android:textColor="#f4a12e"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tol7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_box"
                        android:fontFamily="@font/amazon_bold"
                        android:gravity="center"
                        android:textColor="#f4a12e"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tol8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="3dp"
